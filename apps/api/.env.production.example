# =================================
# ZYPHON API - PRODUCTION ENVIRONMENT
# =================================
# Copy to .env.production and fill in values
# .env.production is gitignored - do NOT commit secrets

# ─── REQUIRED ───────────────────────────────────────────────

# Database (NeonDB Postgres)
DATABASE_URL="postgresql://user:password@host/db?sslmode=require"

# Redis for task queue
REDIS_URL="redis://default:password@host:6379"

# ─── SERVER ─────────────────────────────────────────────────

API_PORT="3002"
API_HOST="0.0.0.0"
NODE_ENV="production"

# ─── LOGGING ────────────────────────────────────────────────

LOG_LEVEL="info"

# ─── CORS ───────────────────────────────────────────────────

# Allowed origins (set to your frontend domain)
CORS_ORIGIN="https://your-domain.com"

# ─── AUTH ───────────────────────────────────────────────────

# Admin authentication
ADMIN_TOKEN=""

# Skip admin auth (NEVER true in production)
SKIP_ADMIN_AUTH="false"

# ─── AI / LLM ───────────────────────────────────────────────

OLLAMA_URL="http://localhost:11434"

# ─── WORKSPACES ─────────────────────────────────────────────

WORKSPACE_ROOT="./workspaces"

# ─── INTERNAL ───────────────────────────────────────────────

# Secret for internal API calls
INTERNAL_API_SECRET=""
