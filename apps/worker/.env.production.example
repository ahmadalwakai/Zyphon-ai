# =================================
# ZYPHON WORKER - PRODUCTION ENVIRONMENT
# =================================
# Copy to .env.production and fill in values
# .env.production is gitignored - do NOT commit secrets

# ─── REQUIRED ───────────────────────────────────────────────

# Database (NeonDB Postgres)
DATABASE_URL="postgresql://user:password@host/db?sslmode=require"

# Redis for BullMQ task queue
REDIS_URL="redis://default:password@host:6379"

# ─── AI / LLM ───────────────────────────────────────────────

# Ollama endpoint
OLLAMA_URL="http://localhost:11434"
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="deepseek-coder-v2:16b"

# LLM request timeout (ms)
LLM_TIMEOUT_MS="300000"

# ─── IMAGE GENERATION ───────────────────────────────────────

# Path to SD3 Python script
SD3_SCRIPT_PATH="./tools/sd3/generate.py"

# Path to SD3 model (.safetensors file)
SD3_MODEL_PATH=""

# SD3 generation timeout (ms)
SD3_TIMEOUT_MS="900000"

# Python binary path
PYTHON_BIN="python"

# ─── WORKSPACES ─────────────────────────────────────────────

WORKSPACE_ROOT="./workspaces"

# ─── WORKER CONFIG ──────────────────────────────────────────

# Number of concurrent jobs
WORKER_CONCURRENCY="1"

# ─── LOGGING ────────────────────────────────────────────────

LOG_LEVEL="info"
